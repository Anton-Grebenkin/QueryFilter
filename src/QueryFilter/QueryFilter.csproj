<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	<TargetFrameworks>net6.0;net7.0;net8.0</TargetFrameworks>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackageId>FluentQueryFilter</PackageId>
    <Title>FluentQueryFilter</Title>
    <Version>$(Version)</Version>
    <Authors>Anton Grebenkin</Authors>
    <Company>Anton Grebenkin</Company>
    <Product>FluentQueryFilter</Product>
    <Description>A library that provides to apply serialized filters to IQueryable collections</Description>
    <RepositoryUrl>https://github.com/Anton-Grebenkin/QueryFilter</RepositoryUrl>
    <PackageReadmeFile></PackageReadmeFile>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageIcon>icon.png</PackageIcon>
    <PackageTags>filter, query, data</PackageTags>
    <PackageProjectUrl>https://github.com/Anton-Grebenkin/QueryFilter</PackageProjectUrl>
  </PropertyGroup>

<ItemGroup>
	<AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
		<_Parameter1>QueryFilter.Tests</_Parameter1>
	</AssemblyAttribute>
</ItemGroup>

<ItemGroup>
  <None Include="..\..\icon.png">
    <Pack>True</Pack>
    <PackagePath>\</PackagePath>
  </None>
</ItemGroup>

<ItemGroup>
  <PackageReference Include="FluentQueryFilter.Models" Version="1.0.1" />
</ItemGroup>

</Project>
